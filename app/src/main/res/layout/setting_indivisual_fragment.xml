<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/back_arrow"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_margin="-100dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="개인 정보 수정"
            android:textColor="@color/black"
            android:textSize="24dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile_flower" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="그린슈니"
        android:textColor="@color/black"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="현재 2레벨"
        android:textColor="@color/orange_700"
        android:textSize="16dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="이름"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/editTextTextPersonName1"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edit_text"
            android:fontFamily="@font/nanum_gothic"
            android:hint="아이디"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="전화번호"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_edit_text"
            android:fontFamily="@font/nanum_gothic"
            android:hint="01012345678"
            android:inputType="phone"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="이메일"
            android:textSize="16dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/stroke_edit_text"
            android:fontFamily="@font/nanum_gothic"
            android:hint="guru15@swu.ac.kr"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nanum_gothic"
            android:text="이메일은 변경이 불가합니다."
            android:textSize="12dp"
            android:textColor="@color/green_500"/>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green_500"
        android:background="@drawable/round_button"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="변경하기"
        android:textColor="@color/white" />

</LinearLayout>