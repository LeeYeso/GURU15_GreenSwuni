<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_logo"


        />



    <TextView
        android:id="@+id/textView_callenge1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="도전하슈는 일정 기간동안 탄소 발자국을 \n줄이는 습관을 꾸준히 참여해 그린슈머가\n될 수 있도록 하는 프로젝트에요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView_Challenge2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="  새로운 도전을 시작해볼까요?"
        android:textColor="@color/black"
        android:textSize="20dp" />



    <Button

        android:id="@+id/buttonStartChallenge"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#ABC270"
        android:background="@drawable/round_button"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="도전하슈"
        android:textColor="@android:color/white" />



</LinearLayout>